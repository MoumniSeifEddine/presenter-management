{% extends 'base.html.twig' %}

{% block title %}Presentateur index{% endblock %}

{% block body %}
    <h1>Liste des presentateur</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for presentateur in presentateurs %}
            <tr>
                <td>{{ presentateur.id }}</td>
                <td>{{ presentateur.nom }}</td>
                <td>
                    <a href="{{ path('app_presentateur_show', {'id': presentateur.id}) }}">show</a>
                    <a href="{{ path('app_presentateur_edit', {'id': presentateur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_presentateur_new') }}">Create new</a>
{% endblock %}
